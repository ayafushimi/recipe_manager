<div class="recipe-title">
  <h1><%= @recipe.title %></h1>
  <h3><%= @recipe.time %>min | <%= @recipe.average_rate %> | <%= @recipe.reports.count %> reports</h3>
  <p>Recipe by: <%= link_to @recipe.creator.username, users_path(@recipe.creator) %></p>
</div>

<div class="ingredients">
  <h2>Ingredients</h2>
  <ul>
    <% @recipe.recipe_ingredients.each do |ri| %>
      <li><%= ri.ingredient.title %> - <%= ri.quantity %> <%= ri.unit %></li>
    <% end %>
  </ul>
</div>
