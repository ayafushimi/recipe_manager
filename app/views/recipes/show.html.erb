<div class="recipe-title">
  <h1><%= @recipe.title %></h1>
  <h3><%= @recipe.time %>min | <%= @recipe.average_rate %> | <%= @recipe.reports.count %> reports</h3>
  <p>Recipe by: <%= link_to @recipe.creator.username, user_path(@recipe.creator) %></p>
</div>

<div class="ingredients">
  <h2>Ingredients</h2>
  <ul>
    <% @recipe.recipe_ingredients.each do |ri| %>
      <li><%= ri.ingredient.title %> - <%= ri.quantity %> <%= ri.unit %></li>
    <% end %>
  </ul>
</div>

<div class="directions">
  <h2>Directions</h2>
  <ol>
    <% @recipe.directions.each do |d| %>
      <li><%= d.text %></li>
    <% end %>
  </ol>
</div>

<div class="reports">
  <% if logged_in? %>
    <%= link_to "Make report", new_recipe_report_path(@recipe), class: "btn btn-lg btn-primary" %>
  <% end %>

  <h2>Reports</h2>
  <ul>
    <% @recipe.reports.each do |r| %>
      <li>
        <%= r.rate %> by <%= link_to r.user.username, user_path(r.user) %>
        <p><%= r.comment %></p>
      </li>
    <% end %>
  </ul>

  <%= link_to "See all reports", recipe_reports_path(@recipe) %>
</div>
